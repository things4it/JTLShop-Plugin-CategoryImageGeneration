<?xml version="1.0" encoding="utf-8"?>
<jtlshopplugin>
    <Name>Kategorie Bild generierung</Name>
    <Description>Generiert Bilder f√ºr Kategorien auf Basis deren Artikeln</Description>
    <Author>Johannes Wendig</Author>
    <URL>http://www.things4it.de</URL>
    <PluginID>t4it_category_image_generation</PluginID>
    <XMLVersion>100</XMLVersion>
    <ShopVersion>5.0.0-beta.1</ShopVersion>
    <MinShopVersion>5.0.0-rc.3</MinShopVersion>
    <Icon></Icon>
    <Version>1.0.0</Version>
    <CreateDate>2021-03-30</CreateDate>
    <Install>
        <Adminmenu>
            <Customlink sort="1">
                <Name>Bild neu generieren</Name>
            </Customlink>
            <Settingslink sort="2">
                <Name>Einstellungen</Name>
                <Setting type="radio" initialValue="trans" sort="1" conf="Y">
                    <Name>Background-Color</Name>
                    <Description>
                        Background-Color of the generated background image.
                    </Description>
                    <ValueName>t4it_category_image_generation_background_color</ValueName>
                    <RadioOptions>
                        <Option value="trans" sort="1">Transparent</Option>
                        <Option value="white" sort="2">White</Option>
                    </RadioOptions>
                </Setting>
            </Settingslink>
        </Adminmenu>
    </Install>
</jtlshopplugin>